<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutruitionTracker.MyMeals"
             xmlns:viewmodel="clr-namespace:NutruitionTracker.ViewModel"
             x:DataType="viewmodel:MyMealsViewModel"
             xmlns:local="clr-namespace:NutruitionTracker"
             Title="MyMeals">
    <VerticalStackLayout
        Padding="20"
        BackgroundColor="White">
        
        <Button 
        Text="Back"
        Command="{Binding GoBackCommand}"
        FontSize="20"
        HorizontalOptions="Start"/>

        <Label 
        Text="Meals!"
        TextColor="Black"
        FontSize="25"
        VerticalOptions="Center" 
        HorizontalOptions="Center"/>

        <CollectionView
            HorizontalOptions="Center"
            BackgroundColor="LightBlue"
            ItemsSource="{Binding MealList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Meal">
                    <Grid>
                        <Label Text="{Binding name}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
           
        </CollectionView>

        <Button
        Text="Add Meal"
        FontSize="20"
        Padding="10"
        VerticalOptions="End"
        Command="{Binding AddMealCommand}"/>

    </VerticalStackLayout>
</ContentPage>