<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutruitionTracker.InputMealPage"
             xmlns:viewmodel="clr-namespace:NutruitionTracker.ViewModel"
             xmlns:searchHandlers="clr-namespace:NutruitionTracker.SearchHandlers"
             x:DataType="viewmodel:InputMealViewModel"
             xmlns:local="clr-namespace:NutruitionTracker"
             Title="InputMealPage">
    
    <VerticalStackLayout
        Padding="10"
        Spacing="5"
        BackgroundColor="White" >
        

        <Button
            Text="GoBack"
            HorizontalOptions="Start"
            Command="{Binding GoBackCommand}"
            />
        
        <Grid RowDefinitions="*, auto"
              ColumnDefinitions="0.5*, 0.5*, 0.25*"
              Padding="10"
              RowSpacing="10"
              ColumnSpacing="10">
            <Label 
                Text="Ingredients"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                TextColor="Black"
                Grid.Row="1"
                Grid.Column="0"/>
            <Label 
                Text="g"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                TextColor="Black"
                Grid.Row="1"
                Grid.Column="1"/>
            <StackLayout
                Grid.Row="0"
                Grid.Column="0">
                <SearchBar
                    Background="LightGray"
                    Placeholder="Input name of the ingrediant...."
                    Text="{Binding IngrediantText}"
                    TextChanged="SearchBar_TextChanged"/>
                <ListView x:Name="searchResults"
                          BackgroundColor="LightBlue"/>
            </StackLayout>
            <Entry
                Background="LightGray"
                Text="{Binding WeightText}"
                Grid.Row="0"
                Grid.Column="1"/>
            <Button
                Text="Add Ingredient"
                Command="{Binding AddCommand}"
                Grid.Row="0"
                Grid.Column="2"/>

        </Grid>

        <CollectionView
             HorizontalOptions="Center"
             BackgroundColor="Transparent"
             ItemsSource="{Binding Ingredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:Ingredient">
                        <Grid ColumnDefinitions="0.5*, 0.5*, 0.25*">
                            <Label Text="{Binding name}" Grid.Column="0" TextColor="Black" HorizontalOptions="Center"/>
                            <Label Text="{Binding amount}" Grid.Column="1" TextColor="Black" HorizontalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
        </CollectionView>


        <Grid ColumnDefinitions="0.4*, 0.4*, 0.2*" ColumnSpacing="10" Padding="10">
            <Entry Grid.Column="0" Text="{Binding MealName}" BackgroundColor="LightGray"/>
            <Entry Grid.Column="1" Text="{Binding MealWeight}" BackgroundColor="LightGray"/>
            <Button Text="Okay" Command="{Binding AddMealCommand}" Grid.Column="2"/>
        </Grid>
    </VerticalStackLayout>
    
</ContentPage>